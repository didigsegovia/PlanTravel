<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background_basico"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/largura_logomenor"
        android:layout_height="@dimen/altura_logomenor"
        android:background="@drawable/logomenorsemfundo"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/fotoAmigo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btnFotoAmigo"
        android:layout_width="@dimen/tamanho_botao"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/botao_customizado"
        android:text="Tirar foto"
        android:onClick="tiraFoto"/>
    <EditText
        android:id="@+id/edtNomeAmigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="Nome"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btnAddAmigo"
        android:layout_width="@dimen/tamanho_botao"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/botao_customizado"
        android:text="Salvar alterações"
        android:onClick="salvarAlt"/>

</LinearLayout>